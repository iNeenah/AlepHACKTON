{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "artifacts/",
    "cache/",
    "coverage/",
    "*.config.js",
    "*.config.ts"
  ]
}